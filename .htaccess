<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    RewriteEngine On

        # NOT needed unless you're using mod_alias to redirect
        RewriteCond %{REQUEST_URI} !/public
        RewriteRule ^(.*)$ public/$1 [L]
        # Direct all requests to /public folder

</IfModule>
